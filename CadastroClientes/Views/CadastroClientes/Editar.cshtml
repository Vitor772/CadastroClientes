@model CadastroClienteModel
@{
    ViewData["Title"] = "Editar";
}


<div class="text-center">
    <h1 class="display-4">Bem Vindo</h1>
</div>


<form asp-controller="CadastroClientes" asp-action="Alterar" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label for="nome" class="nm">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o Nome">
    </div>
    <div class="form-group">
        <label for="telefone" class="form-label">Telefone</label>
        <input type="text" asp-for="Telefone" class="form-control" placeholder="Digite o E-mail do Contato">
    </div>

    <button type="submit" class="btn btn-primary">Editar</button>
    <a class="btn btn-secondary" asp-controller="CadastroClientes" asp-action="Index" role="button">Voltar</a>
</form>