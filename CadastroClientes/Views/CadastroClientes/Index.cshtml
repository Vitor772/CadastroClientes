@model List<CadastroClienteModel>
@{
    ViewData["Title"] = "Listagem de Clientes";
}



<div class="text-center">


    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-controller="CadastroClientes" asp-action="Criar">Adicionar novo Cliente</a>
        </div>


    <h1 class="display-4">Listagem de Usuarios</h1>
    <br />

    <table class="table" id="table-contatos" style="width:100%">
        <thead>
            <tr>
                <th scope="col">Nome</th>
                <th scope="col">Email</th>
                <th scope="col">Celular</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var cliente in Model)
                {
                    <tr>
                        <td scope="row">@cliente.Id</td>
                        <td>@cliente.Nome</td>
                        <td>@cliente.Telefone</td>

                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-primary" asp-route-id="@cliente.Id" asp-controller="CadastroClientes" asp-action="Editar">Editar</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@cliente.Id" asp-controller="CadastroClientes" asp-action="ApagarConfirmacao">Apagar</a>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr class="odd"><td valign="top" colspan="5">Nenhum Econtrado</td></tr>
            }
        </tbody>
    </table>
</div>