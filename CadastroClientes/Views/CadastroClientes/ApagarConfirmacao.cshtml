@model CadastroClienteModel
@{
    ViewData["Title"] = "Confirmação apagar o contato";
}

<div class="text-center">
    <h3>Realmente deseja apagar Contato (@Model.Nome)</h3>
</div>

<a class="btn btn-primary btn-block" role="button" asp-controller="CadastroClientes" asp-action="Index">Cancelar exclusão</a>
<a class="btn btn-danger btn-block" role="button" asp-controller="CadastroClientes" asp-action="Apagar" asp-route-id="@Model.Id">Confirmar exclusão</a>